{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "esnext.asynciterable",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "types": [
      "async",
      "chai-jquery",
      "jquery",
      "node",
      "react-router",
      "blob-util",
      "graphql",
      "lodash",
      "react",
      "react-router-dom",
      "sizzle",
      "bluebird",
      "history",
      "minimatch",
      "react-bootstrap",
      "recompose",
      "zen-observable",
      "react-dom"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "cypress",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
